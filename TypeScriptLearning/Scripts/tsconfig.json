{
  "compilerOptions": {
    "target": "es5",
    "module": "amd",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types"
    ]   
  },  
  "exclude": [
    "node_modules",
    "wwwroot"
  ],
  "files": [
    "./app.ts",
    "./smartwatch.ts",
    "./mobiles.ts"
  ],
  "compileOnSave": true
}
